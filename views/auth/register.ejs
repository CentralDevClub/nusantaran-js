<%- include ('../includes/header.ejs') %>
    
<div class="register-photo">
    <% if (errorMessage){ %>
        <div class="alert alert-danger">
            <p><%= errorMessage %></p>
        </div>
    <% } %>
    <div class="form-container">
        <form action="/register" method="post" enctype="multipart/form-data">
            <img src="/img/welcome.svg" style="margin: auto; display: block; width: 400px;">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <h2 class="text-center mt-4"><strong>Create</strong> an account.</h2>
            <div class="form-group">
                <label for="image"><strong>Profile Photo</strong></label>
                <input class="form-control-file bg-white" type="file" name="image" required>
            </div>
            <div class="form-group">
                <input class="form-control <%= errors.find(e => e.param === 'name') ? 'invalid' : '' %>" type="text" name="name" placeholder="Name" value="<%= placeholder.name %>" required>
            </div>
            <div class="form-group">
                <input class="form-control <%= errors.find(e => e.param === 'email') ? 'invalid' : '' %>" type="email" name="email" placeholder="Email" value="<%= placeholder.email %>" required>
            </div>
            <div class="form-group">
                <input class="form-control <%= errors.find(e => e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input class="form-control <%= errors.find(e => e.param === 'password-repeat') ? 'invalid' : '' %>" type="password" name="password-repeat" placeholder="Password (repeat)" required>
            </div>
            <div class="form-group">
                <input class="form-control <%= errors.find(e => e.param === 'address') ? 'invalid' : '' %>" type="text" name="address" placeholder="Address (for shipment)" value="<%= placeholder.address %>" required>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label"><input class="form-check-input" type="checkbox" required>I agree to the terms & services</label>
                    <p><strong>By checking the box above we assume that you have agreed our <a href="/#how-we-serve">terms & services</a></strong></p>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block" type="submit">Sign Up</button>
            </div>
            <a class="already" href="/login">You already have an account? Login here.</a>
        </form>
    </div>
</div>
<%- include ('../includes/footer.ejs') %>