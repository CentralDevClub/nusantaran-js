<%- include ('../includes/header.ejs') %>
<% if (errorMessage){ %>
    <div class="error-message alert alert-danger">
        <p><%= errorMessage %></p>
    </div>
<% } %>
<div class="register-photo">
    <div class="form-container">
        <div class="image-holder img-register-holder">
            <img class="img-register" src="/img/meeting.jpg">
        </div>
        <form action="/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <h2 class="text-center"><strong>Create</strong> an account.</h2>
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Nama" value="<%= placeholder.name %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="Email" value="<%= placeholder.email %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password-repeat" placeholder="Password (repeat)" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="address" placeholder="Alamat" value="<%= placeholder.address %>" required>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label"><input class="form-check-input" type="checkbox" required>I agree to the license terms.</label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
            </div>
            <a class="already" href="/login">You already have an account? Login here.</a>
        </form>
    </div>
</div>
<%- include ('../includes/footer.ejs') %>