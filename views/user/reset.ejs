<%- include ('../includes/header.ejs') %>

<div class="login-clean">
    <% if (success) { %>
        <p class="alert alert-success">Please check your email to reset password, it's only valid for 1 hour</p>
    <% } %>
    <% if (errorMessage){ %>
        <p class="alert alert-warning"><%= errorMessage %></p>
    <% } %>
    <form action="/reset" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <h2>Reset Password</h2>
        <div class="form-group mt-4">
            <input class="form-control" type="email" name="email" placeholder="Email" required>
        </div>
        <div class="form-group">
            <button class="btn btn-info btn-block" type="submit">Reset Password</button>
        </div>
        <p>Go back to <a href="/login">log in</a></p>
    </form>
</div>

<%- include ('../includes/footer.ejs') %>