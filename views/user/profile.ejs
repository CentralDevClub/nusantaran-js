<%- include ('../includes/header.ejs') %>

<div class="container-fluid dimmed-bg">
    <div class="container pt-4 pb-4">
        <div class="row">
            <div class="col">
                <h2>My Account</h2>
                <div>
                    <strong><%= user.name %></strong>
                    <% if (isAdmin) { %>
                        <span class="alert alert-success">Administrator</span>
                    <% } %>
                </div>
                <div>
                    <a href="/reset">Reset Pasword</a>
                </div>
                <form action="/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-info">Logout</button>
                </form>
                <p>Account id : <%= user.index %></p>
                <p><%= user.email %></p>
                <p><%= user.address %></p>
            </div>
        </div>
    </div>
</div>

<%- include ('../includes/footer.ejs') %>