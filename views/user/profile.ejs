<%- include ('../includes/header.ejs') %>

<div class="container-fluid dimmed-bg main">
    <div class="container pt-4 pb-5">
        <div class="row">
            <div class="col">
                <h5 class="mb-3">My Account</h5>
            </div>
        </div>
        <div class="row bg-white rounded shadow p-4">
            <div class="col text-center d-none d-md-block">
                <img style="max-width: 300px;" class="img-fluid" src="/<%= user.image %>">
            </div>
            <div class="col">
                <img src="/<%= user.image %>" class="img-fluid d-block d-md-none mb-3">
                <div>
                    <p class="text-muted mb-0"><strong>USERNAME</strong></p>
                    <p>
                        <%= user.name %>
                        <% if (isAdmin) { %>
                            <span class="badge badge-primary">Administrator</span>
                        <% } %>
                    </p>
                </div>
                <div>
                    <p class="text-muted mb-0"><strong>ACCOUNT ID</strong></p>
                    <p><%= user.index %></p>
                </div>
                <div>
                    <p class="text-muted mb-0"><strong>EMAIL</strong></p>
                    <p><a href="mailto:<%= user.email %>"><%= user.email %></a></p>
                </div>
                <div>
                    <p class="text-muted mb-0"><strong>SHIPMENT ADDRESS</strong></p>
                    <p><%= user.address %></p>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="/reset" class="btn btn-outline-secondary">Reset Pasword</a>
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-danger">Log out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('../includes/footer.ejs') %>